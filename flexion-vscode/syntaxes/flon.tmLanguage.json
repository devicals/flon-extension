{
  "name": "Flexion",
  "scopeName": "source.flon",
  "patterns": [
    { "include": "#comments" },
    { "include": "#expression" },
    { "include": "#path-declaration" },
    { "include": "#template-declaration" },
    { "include": "#template-usage" },
    { "include": "#reference" },
    { "include": "#label" },
    { "include": "#types" },
    { "include": "#values" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.flon",
          "begin": "!!",
          "end": "!!",
          "captures": { "0": { "name": "punctuation.definition.comment.flon" } }
        },
        {
          "name": "comment.line.flon",
          "match": "!.*$",
          "captures": { "0": { "name": "punctuation.definition.comment.flon" } }
        }
      ]
    },
    "expression": {
      "match": "(\\$\\()([^)]*)(\\))",
      "captures": {
        "1": { "name": "punctuation.section.expression.begin.flon" },
        "2": { "name": "variable.other.expression.flon" },
        "3": { "name": "punctuation.section.expression.end.flon" }
      }
    },
    "path-declaration": {
      "patterns": [{
        "match": "(@)(\\w+(?:/\\w+)*)",
        "captures": {
          "1": { "name": "punctuation.definition.path.flon" },
          "2": { "name": "entity.name.type.path.flon" }
        }
      }]
    },
    "template-declaration": {
      "patterns": [{
        "match": "(@templates)\\s+(\\w+)",
        "captures": {
          "1": { "name": "keyword.control.template.flon" },
          "2": { "name": "entity.name.type.template.flon" }
        }
      }]
    },
    "template-usage": {
      "patterns": [{
        "match": "(#)(\\w+)",
        "captures": {
          "1": { "name": "punctuation.definition.template.flon" },
          "2": { "name": "entity.name.function.template.flon" }
        }
      }]
    },
    "reference": {
      "patterns": [{
        "match": "(@)(\\w+(?:/\\w+)*)",
        "captures": {
          "1": { "name": "punctuation.definition.reference.flon" },
          "2": { "name": "variable.other.reference.flon" }
        }
      }]
    },
    "label": {
      "patterns": [{
        "match": "^\\s*(\\w+|_)\\s*:",
        "captures": { "1": { "name": "variable.other.property.flon" } }
      }]
    },
    "types": {
      "patterns": [{
        "name": "storage.type.flon",
        "match": "\\b(string|str|integer|int|float|decimal|double|boolean|bool|object|list|array|void|null|undefined|keyword)\\b"
      }]
    },
    "values": {
      "patterns": [
        { "name": "string.quoted.double.flon", "begin": "\"", "end": "\"", "patterns": [{ "match": "\\\\.", "name": "constant.character.escape.flon" }] },
        { "name": "constant.numeric.flon", "match": "\\b-?\\d+(\\.\\d+)?\\b" },
        { "name": "constant.language.bool.flon", "match": "\\b(true|false)\\b" }
      ]
    }
  }
}